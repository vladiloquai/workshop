<h2><%= t('titles.sign_in')%></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  	<div class="form-inputs">
    	<%= f.input :email, :wrapper => :append, :required => false, :autofocus => true do %>
  			<%= f.input_field :email %><span class="add-on"><i class="icon-envelope"></i></span>
		<% end %>

		<%= f.input :password, :wrapper => :append, :required => false do %>
  			<%= f.input_field :password %><span class="add-on"><i class="icon-certificate"></i></span>
		<% end %>

    	<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  	</div>

  	<div class="form-actions">
    	<%= f.button :submit, t('actions.log_in'), class: "btn btn-info"%>
  	</div>
<% end %>

<%= render "devise/shared/links" %>


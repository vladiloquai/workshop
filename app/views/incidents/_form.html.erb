<%= simple_form_for(@incident, url: create_incidents_path, method: :post, html: {class: "form-horizontal well"}) do |f| %>
  	<%= f.error_notification %>

  	<div class="form-inputs">
    	<%= f.input :title %>
    	<%= f.input :description %>
      <%= f.association :categories, input_html: {class: "chosen"}%>
      <%= f.input :contact_method_id, collection: ContactMethod::CONTACTS.map{|s| [s[:name], s[:id]]}, prompt: t('messages.select_an_option')%>
      <%= f.input :possible_solution, :as => :text, :input_html => {:rows => 5}%>
  	</div>

  	<div class="form-actions">
       <%= f.button    :submit, 
                        (action_name == 'new' || action_name == 'create') ? t('actions.new') : t('actions.edit'),
                        class: "btn btn-info"%>     
    </div>
<% end %>
